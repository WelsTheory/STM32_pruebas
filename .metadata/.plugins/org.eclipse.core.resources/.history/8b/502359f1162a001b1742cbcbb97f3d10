#include "main.h"
#include "sapi.h"
#include "mef.h"
#include "led.h"

extern delay_t MEFSema;
bool_t cuenta = 0;

void MEFButtonInit(void){
	estadoActual = ROJO_;
}

void MEFSemafActualizar(){
	switch(estadoActual){
		case ROJO_:
			OnLED(ROJO);
			OffLED(AMARILLO);
			OffLED(VERDE);
			if(delayRead(&MEFSema)){
				if(cuenta >= 4){
					estadoActual = ROJO_AMARILLO;
				}
				else{
					cuenta++;
				}
			}
		break;
		case ROJO_AMARILLO:
			OnLED(ROJO);
			OnLED(AMARILLO);
			OffLED(VERDE);
			if(delayRead(&MEFSema)){
				if(cuenta >= 1){
					estadoActual = VERDE_;
				}
				else{
					cuenta++;
				}
			}
		break;
		case VERDE_:
			OffLED(ROJO);
			OffLED(AMARILLO);
			OnLED(VERDE);
			if(delayRead(&MEFSema)){
				if(cuenta >= 1){
					estadoActual = AMARILLO_;
				}
				else{
					cuenta++;
				}
			}
		break;
		case BUTTON_RISING:
			if(delayRead(&MEFBoton)){
				if(HAL_GPIO_ReadPin(GPIOB, B1_Pin)){
					estadoActual = BUTTON_UP;
					buttonReleased();
				}
			}
			else{
				estadoActual = BUTTON_DOWN;
			}
		break;
		default:
			MEFButtonInit();
		break;
	}
}

void buttonPressed(void){
	OnLED(VERDE);
}

void buttonReleased(void){
	OffLED(VERDE);
}

