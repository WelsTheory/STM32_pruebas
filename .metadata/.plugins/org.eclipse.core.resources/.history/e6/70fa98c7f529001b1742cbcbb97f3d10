#include "main.h"
#include "sapi.h"
#include "mef.h"
#include "led.h"

void MEFButtonInit(void){
	estadoActual = BUTTON_UP;
}

void MEFButtonActualizar(void){
	switch(estadoActual){
		case BUTTON_UP:
			if(!HAL_GPIO_ReadPin(GPIOC, B0_Pin)){
				estadoActual = BUTTON_FALLING;
			}
		break;
		case BUTTON_FALLING:
			delay_ms(40);
			if(!gpioRead(TEC1)){
				estadoActual = BUTTON_DOWN;
				buttonPressed();
			}
			else{
				estadoActual = BUTTON_UP;
			}
		break;
		case BUTTON_DOWN:
			if(HAL_GPIO_ReadPin(GPIOC, B0_Pin)){
				estadoActual = BUTTON_RISING;
				buttoPressed();
			}
		break;
		case BUTTON_RISING:
			delay_ms(40);
			if(HAL_GPIO_ReadPin(GPIOC, B0_Pin)){
				estadoActual = BUTTON_UP;
				buttonReleased();
			}
			else{
				estadoActual = BUTTON_DOWN;
			}
		break;
		default:
			MEFButtonInit();
		break;
	}
}

void buttonPressed(void){
	OnLED(VERDE);
}

void buttonReleased(void){
	OffLED(VERDE);
}

